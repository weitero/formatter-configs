{
  "$schema": "https://biomejs.dev/schemas/2.3.7/schema.json",
  "assist": {
    "actions": {
      "recommended": true
    }
  },
  "css": {
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "quoteStyle": "single"
    },
    "parser": {
      "cssModules": true,
      "tailwindDirectives": true
    }
  },
  "files": {
    "ignoreUnknown": true
  },
  "formatter": {
    "indentStyle": "space",
    "useEditorconfig": true
  },
  "html": {
    "formatter": {
      "enabled": true,
      "indentScriptAndStyle": true,
      "indentStyle": "space",
      "selfCloseVoidElements": "always"
    },
    "parser": {
      "interpolation": true
    }
  },
  "javascript": {
    "formatter": {
      "attributePosition": "auto",
      "bracketSameLine": false,
      "bracketSpacing": true,
      "enabled": true,
      "expand": "auto",
      "indentStyle": "space",
      "indentWidth": 2,
      "jsxQuoteStyle": "single",
      "lineEnding": "lf",
      "lineWidth": 80,
      "operatorLinebreak": "before",
      "quoteStyle": "single",
      "semicolons": "asNeeded",
      "trailingCommas": "es5"
    },
    "parser": {
      "jsxEverywhere": false
    }
  },
  "json": {
    "formatter": {
      "indentStyle": "space"
    }
  }
}
